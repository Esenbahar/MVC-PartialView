@using mvcintermediate.Models
@model  UrunKategoriModel
@{
    ViewBag.Title = "Index";


}

<h2>DERSLER</h2> 
<hr />
<div class="alert alert-success" role="alert">@Model.UrunSayisi adet ürün listelenmiştir.
</div>
<hr />

<div class="row">
    <div class=" col-md-3">
      @Html.Partial("KategoriMenu",Model.Kategoriler)
    </div>
    <div class=" col-md-9">
        @foreach (var urun in Model.Urunler)
        {


            <div class="thumbnail">
                <img src="http://via.placeholder.com/350x150" alt="...">
                <div class="caption">
                    <h3>@urun.UrunAdi</h3>


                    <p>

                        @if (urun.Aciklama.Length > 20)
                    {
                            @(urun.Aciklama.Substring(0, 12) + "...");
                    }
                    else
                    {
                            @urun.Aciklama
                        }

                    </p>


                    <h4>@urun.Fiyat</h4>
                    <p><a href="#" class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-default" role="button">Button</a></p>
                </div>

            </div>
        }
        </div>



</div>


}
    







